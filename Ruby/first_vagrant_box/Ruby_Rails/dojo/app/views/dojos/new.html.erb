
<h1>Add New Dojo</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color: red;"><%= error %></p>
    <% end %>
<% end %>

<form action="/create" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>Branch: <input type="text" name="branch" value=""></p>
    <p>Street: <input type="text" name="street" value=""></p>
    <p>City: <input type="text" name="city" value=""></p>
    <p>State: <input type="text" name="state" value=""></p>
    <input type="submit" name="" value="Add New Dojo">
</form>

<a href="/"> HOME </a>
