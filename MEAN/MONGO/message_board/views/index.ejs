<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board Demo</title>
  </head>
  <body>
    <h1>Message Board</h1>


    <fieldset>
      <form action="/messages" method="post">
        <p>Name: <input type="text" name="name" value="" required ></p>
        <p>Content: <input type="text" name="content" value="" required ></p>
        <input type="submit" value="Post Message">
      </form>
      <hr>
    </fieldset>

  <% for (var i in messages){ %>
    <h3>Name: <%= messages[i].name %></h3>
    <h3>Message: <%= messages[i].content %></h3>
    <% for (var j = 0; j < messages[i].comments.length; j++){ %>
      <p>Name: <%= messages[i].comments[j].name %></p>
      <p>Comment: <%= messages[i].comments[j].content %></p>
    <% } %>
    <form action="/message/<%= messages[i]._id %>/comments" method="post">
      <p>Name: <input type="text" name="name" value=""></p>
      <p>Content: <input type="text" name="content" value=""></p>
      <input type="submit" value="Post a Comment">
    </form>
    <hr>
  <% } %>




  </body>
</html>
